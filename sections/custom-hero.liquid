<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide " data-aos="fade-zoom-in">
        <a href="{{ block.settings.link }}">
          <img
            src="{% if block.settings['file-image'] %}{{ block.settings.file-image | img_url: 'large' }}{% else %}{{ block.settings.url-image }}{% endif %}"
            alt="{% if block.settings['file-image'] %}{{ block.settings.file-image.alt }}{% else %}{{ block.settings.url-image.alt }}{% endif %}"
          >
        </a>
      </div>
    {% endfor %}
  </div>
  <!--
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  -->

  <div class="swiper-pagination"></div>
</div>

<style>
  .swiper {
     width: 100%;
     height: 100%;
   }

   .swiper-slide {
     display: flex;
     justify-content: center;
     align-items: center;
     font-size: 0;
   }

  .swiper-slide a {
    display: block;
    width: 100%;
    height: inherit;
  }

  .swiper-slide img {
    height: calc(100dvh - 65px);
     width: 100%;
    object-fit: fit;
  }

  .swiper-pagination span {
    background: #838383 !important;
    width: 12px;
    height: 12px;
  }

  @media screen and (min-width: 990px) {
    .swiper-slide img {
      height: calc(100vh - 85px);
      width: 100%;
      object-fit: cover;
    }
  }
</style>

<script>
  var swiper = new Swiper(".swiper", {
    slidesPerView: 1.5,
    spaceBetween: 30,
    centeredSlides: true,
    loop: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
     speed: 1000,
    breakpoints: {
      // when window width is >= 320px
      320: {
        slidesPerView: 1,
        spaceBetween: 15,
      },
      // when window width is >= 640px
      640: {
        slidesPerView: 1.5,
        spaceBetween: 20,
      },
    },

    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>

{% schema %}
{
  "name": "custom-heroimage",
  "tag": "section",
  "blocks": [{
    "name": "hero-image",
    "type": "image",
    "settings": [{
      "type": "url",
      "id": "link",
      "label": "Link"
    },{
      "type": "text",
      "id": "url-image",
      "label": "Url-image"
    },{
      "type": "image_picker",
      "id": "file-image",
      "label": "File-image"
    }]
  }],
  "presets": [{
    "name": "custom-heroimage"
  }]
}
{% endschema %}
