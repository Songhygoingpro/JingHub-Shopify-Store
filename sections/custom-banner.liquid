<div class="banner-wrapper">
    <a href="#">
      {% for block in section.blocks %}
        {% if block.settings.image %}
          <img src="{{ block.settings.image  }}" class="banner">
        {% else %}
          <img src="{{ block.settings.Url-image }}" class="banner">
        {% endif %}
      {% endfor %}
    </a>
  </div>
  
  <style>
    .banner-wrapper {
      padding-top: {{ padding_top }};
      padding-bottom: {{ padding_bottom }};
      display: flex;
      justify-content: center;
    }
  </style>
  
  {% schema %}
  {
    "name": "Section name",
    "settings": [{
    "type": "range",
  "id": "padding_top",
  "min": 0,
  "max": 500,
  "step": 10,
  "unit": "px",
  "label": "padding_top",
      "default": 0,
      "unit": "px"
    },{
      "type": "range",
  "id": "padding_bottom",
  "min": 0,
  "max": 500,
  "step": 10,
  "unit": "px",
  "label": "padding_bottom",
      "default": 0,
      "unit": "px"
    }],
    "presets": [{"name": "Custom-banner"}],
    "blocks": [{
      "name": "Banner",
      "type": "Banner",
      "settings": [{
        "type": "image_picker",
        "id": "image",
        "label": "Pick image for bannner"
      },
      { "type": "text",
        "id": "Url-image",
        "label": "Pick image for bannner"}
      ]
    }]
  
  }
  {% endschema %}
  